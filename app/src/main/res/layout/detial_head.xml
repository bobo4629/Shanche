<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="56dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="StartSite"
        android:id="@+id/textView_Head_StartSite"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginStart="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="0dp"
        android:paddingRight="12dp"
        android:layout_toStartOf="@+id/imageButton" />
    <ImageView
        android:id="@+id/imageView_div"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#efffff"
        android:layout_below="@+id/textView_Head_StartSite"
        android:layout_alignStart="@+id/textView_Head_StartSite"
        android:layout_alignEnd="@+id/textView_Head_StartSite"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EndSite"
        android:id="@+id/textView_head_EndSite"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/imageView_div"
        android:layout_alignStart="@+id/textView_Head_StartSite"
        android:paddingBottom="0dp"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_toStartOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:id="@+id/imageButton"
        android:src="@drawable/updown"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView_head_EndSite" />


</RelativeLayout>